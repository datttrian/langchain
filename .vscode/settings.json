{
    "git.autofetch": true,
    "gitdoc.enabled": true,
    "gitdoc.commitMessageFormat": "ccc, LLL d, kkkk, h:mm a ZZ",
    "flake8.args": [
        "--max-line-length=150"
    ],
    "files.insertFinalNewline": true,
    "[python]": {
          "editor.defaultFormatter": "ms-python.autopep8"
        },
    "editor.defaultFormatter": "ms-python.black-formatter",
}
